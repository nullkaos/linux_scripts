start=$(date +%s.%N)

function sigint() {
    echo ""
    end=$(date +%s.%N)
    diff=$(echo "$end-$start" | bc -ql)
    diff=$(echo "$diff" | sed -r 's#^\.#0.#')
    echo "${diff}s"
    exit $?
}

trap sigint SIGINT

echo -n "Timer waiting for SIGINT..."
while true ; do
    read x
done

# EOF
