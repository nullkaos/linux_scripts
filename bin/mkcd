#!/bin/bash
#
# mkcd -- mkdir then cd
# Copyright (C) 2010-2011  Alan "Shtark" SCHNEIDER
#                          <shk.schneider[at]gmail.com>
#
# This program comes with ABSOLUTELY NO WARRANTY.
# This is free software, and you are welcome to redistribute it
# under certain conditions.
#

[ $# -ne 1 ] && echo "Usage: . `basename "$0"` <dir>" >&2 && exit 1
[ -d "$1" ] && echo "$1: Directory already exists" >&2 && cd "$1" && pwd && exit 1
[ ! -w "`dirname $1`" ] && echo "E: "$(dirname "$1")": Permission denied" >&2 && exit 1

# You MUST use that script as follow:
# /> . mkcd <DIR>
mkdir "$1" && cd "$1"
# If you don't like it, just set an alias in your shell.
